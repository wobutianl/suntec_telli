package list.show;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;

import android.app.Activity;
import android.os.Bundle;
import android.util.Log;
import android.view.ContextMenu;
import android.view.MenuItem;
import android.view.View.OnCreateContextMenuListener;
import android.view.Window;
import android.widget.AdapterView;
import android.widget.AdapterView.OnItemClickListener;
import android.widget.Button;
import android.widget.EditText;
import android.widget.ListView;
import android.widget.SimpleAdapter;
import android.widget.Toast;

import android.view.View;
import android.view.ContextMenu.ContextMenuInfo;

public class ShowListActivity extends Activity {
	/** Called when the activity is first created. */

	ListView list; // ListView控件
	Button sendBtn;
	Button resBtn;
	EditText sendText;
	EditText resText;

	private Button sendButton = null, button1, button2;
	private EditText contentEditText = null;
	private ListView chartListView = null;
	private List<ChartEntity> chartList = null;
	private TwoAdapter chartAdapter = null;
	boolean jianghua;

	@Override
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		requestWindowFeature(Window.FEATURE_NO_TITLE);
		setContentView(R.layout.main);

		contentEditText = (EditText) this.findViewById(R.id.sendText);
		sendButton = (Button) this.findViewById(R.id.sendBtn);

		chartListView = (ListView) this.findViewById(R.id.listView1);

		chartList = new ArrayList<ChartEntity>();
		ChartEntity chartEntity = null;
		for (int i = 0; i < 2; i++) {
			chartEntity = new ChartEntity();
			if (i % 2 == 0) {
				chartEntity.setComeMsg(false);
				chartEntity.setContent("Hello");
				chartEntity.setchartTime("2012-09-20 15:12:32");
			} else {
				chartEntity.setComeMsg(true);
				chartEntity.setContent("Hello,nice to meet you!");
				chartEntity.setchartTime("2012-09-20 15:13:32");
			}
			chartList.add(chartEntity);
		}

		chartAdapter = new TwoAdapter(this, chartList);
		chartListView.setAdapter(chartAdapter);

		sendButton.setOnClickListener(new View.OnClickListener() {

			@Override
			public void onClick(View v) {
				if (!contentEditText.getText().toString().equals("")) {
					// 发送消息
					send();
				} else {
					Toast.makeText(ShowListActivity.this, "Content is empty",
							Toast.LENGTH_SHORT).show();
				}
			}
		});

	}

	private void send() {
		ChartEntity chartEntity = new ChartEntity();
		chartEntity.setchatTime("2012-09-20 15:16:34");
		chartEntity.setContent(contentEditText.getText().toString());
		chartEntity.setComeMsg(false);
		chartList.add(chartEntity);
		chartAdapter.notifyDataSetChanged();
		chartListView.setSelection(chartList.size() - 1);
		contentEditText.setText("");
	}
}